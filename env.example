# ==============================================================================
# FastAPI Service - Environment Configuration
# ==============================================================================
# Copy this file to .env and update with your actual values

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
APP_NAME="FastAPI Service"
APP_VERSION="0.1.0"
APP_ENVIRONMENT="development"
APP_HOST="0.0.0.0"
APP_PORT=8080
APP_DEBUG=true

# API Authentication
APP_X_API_KEY="changeme-in-production"

# CORS Settings (comma-separated origins or * for all)
ALLOWED_ORIGINS_STR="*"

# ==============================================================================
# DATABASE SETTINGS (PostgreSQL)
# ==============================================================================
DB_HOST="localhost"
DB_PORT=5432
DB_NAME="fastapi_service"
DB_USER="postgres"
DB_PASSWORD="postgres"

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ==============================================================================
# REDIS SETTINGS
# ==============================================================================
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# ==============================================================================
# QUOTES MODULE SETTINGS
# ==============================================================================
# SSL verification for quotes API requests (default: false for development)
# Set QUOTES_VERIFY_SSL=true to enable SSL verification in production
# WARNING: Disabling SSL verification is insecure and should never be used in production
QUOTES_VERIFY_SSL=false

# ==============================================================================
# ADDITIONAL SETTINGS
# ==============================================================================
# Add your custom settings here as needed

# ELASTICSEARCH_HOST="localhost"
# ELASTICSEARCH_PORT=9200
# ELASTICSEARCH_USERNAME=""
# ELASTICSEARCH_PASSWORD=""

# ==============================================================================
# SCRAPY SETTINGS
# ==============================================================================
SCRAPY_CONCURRENT_REQUESTS=16
SCRAPY_DOWNLOAD_DELAY=0.5
SCRAPY_RANDOMIZE_DOWNLOAD_DELAY=true
SCRAPY_AUTOTHROTTLE_ENABLED=true

# ==============================================================================
# CRAWLER SETTINGS
# ==============================================================================
CRAWLER_USER_AGENT="SainCrawlerNews/0.1.0 (+https://github.com/OneDataID/fastapi-service)"
CRAWLER_ROBOTS_TXT_COMPLIANCE=true
CRAWLER_MAX_ARTICLES_PER_RUN=1000
